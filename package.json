{
  "name": "@mstfmedeni/collapsible-tab-view",
  "version": "0.2.0",
  "description": "A react native component with collapsible header and custom refresh control, powered by Reanimated v4 & GestureHandler v2. Fork of @showtime-xyz/tab-view with additional features.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "workspaces": [
    "example"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "collapsible",
    "tab-view",
    "reanimated",
    "gesture-handler",
    "flashlist",
    "collapsible-header",
    "pull-to-refresh"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mstfmedeni/showtime-tab-view.git"
  },
  "author": "Mustafa Medeni <mstfmedeni@gmail.com> (https://github.com/mstfmedeni)",
  "contributors": [
    "alantoa <toacncom@gmail.com> (https://github.com/showtime-xyz)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mstfmedeni/showtime-tab-view/issues"
  },
  "homepage": "https://github.com/mstfmedeni/showtime-tab-view#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@evilmartians/lefthook": "^1.13.6",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@shopify/flash-list": "^2.1.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.2.0",
    "@types/react-native": "0.73.0",
    "commitlint": "^20.1.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "pod-install": "^1.0.7",
    "prettier": "^3.6.2",
    "react": "19.2.0",
    "react-native": "^0.81.4",
    "react-native-builder-bob": "^0.40.13",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-pager-view": "6.9.1",
    "react-native-reanimated": "~4.1.2",
    "react-native-tab-view": "4.1.3",
    "release-it": "^19.0.5",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "@types/react": "18.2.6",
    "@types/react-native": "0.72.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-pager-view": ">=5.0.0",
    "react-native-reanimated": ">=2.0.0",
    "react-native-tab-view": ">3.3.0"
  },
  "peerDependenciesMeta": {
    "@shopify/flash-list": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "warn"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
